# Django Configuration
DEBUG=True
SECRET_KEY=django-insecure-your-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
# For SQLite (Development - Default)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# For PostgreSQL (Production)
# Uncomment and configure below for PostgreSQL
# DB_ENGINE=django.db.backends.postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=expense_tracker
# DB_USER=postgres
# DB_PASSWORD=your-secure-password

# CORS Configuration (for DRF API with separate React frontend)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000

# JWT Configuration (Django REST Framework)
JWT_SECRET=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# Email Configuration
# Using Console Backend (prints emails to console - Development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Using Gmail (Gmail App Password Required)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-specific-password
# DEFAULT_FROM_EMAIL=your-email@gmail.com

# AWS S3 Configuration (Optional - for media file storage)
# USE_S3=True
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/expense_tracker.log

# Application Settings
CURRENCY_DEFAULT=USD
DATE_FORMAT=YYYY-MM-DD
TIMEZONE=UTC

# Security Settings
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_SECURITY_POLICY=True

# Redis Configuration (Optional - for caching and Celery)
# REDIS_URL=redis://localhost:6379/0

# Celery Configuration (Optional - for async tasks)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# API Documentation
API_DOCS_ENABLED=True
SWAGGER_ENABLED=True

# Frontend Settings
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_ENV=development
